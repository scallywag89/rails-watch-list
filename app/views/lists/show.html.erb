<%= render 'partials/banner' %>
<div class="container mt-3">
  <div class="row">
    <div>
      <%= link_to "Add a movie", new_list_bookmark_path(@list), class:"btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-6 mt-3">
      <div class="card" style="width: 36rem;">
        <img class="card-img-top" src=" <%= bookmark.movie.poster_url %> " alt="Movie poster">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %> | <%= bookmark.movie.rating %> ⭐️</h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
        </div>
        <div class="card-body">
          <%= bookmark.comment %>
          <%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure"}, class: 'text-danger' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

</div>

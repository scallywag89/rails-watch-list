<%= render 'partials/banner' %>
<div class="container mt-3">
  <div class="row">
    <div class="d-flex flex-row-reverse">
      <div class="p-2">
        <%= link_to 'Delete this list', list_path(@list), method: :delete, data: { confirm: "Are you sure"}, class: 'btn btn-danger' %>
      </div>
      <div class="p-2">
        <%= link_to "Add a movie", new_list_bookmark_path(@list), class:"btn btn-success" %>
      </div>
    </div>
  </div>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-3 mt-3">
      <div class="card" style="width: 36rem;">
        <img class="card-img-top" src=" <%= bookmark.movie.poster_url %> " alt="Movie poster">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %> | <%= bookmark.movie.rating %> ⭐️ </h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
        </div>
        <div class="card-body d-flex">
          <div class="p-2">
            <%= bookmark.comment %>
          </div>
          <div class="p-2">
            <%= link_to 'delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure"}, class: 'text-danger card-link' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>

</div>

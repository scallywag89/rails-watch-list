<%= render 'partials/hero' %>
<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h2>My Lists</h2>
    </div>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4">
        <div class="card-category classic">
          <%= list.name %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4">
      <a href=" <%= new_list_path %> " class="btn btn-success">Create a movie list</a>
    </div>
  </div>
</div>

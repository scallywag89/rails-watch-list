<%= render 'partials/hero' %>
<div class="container mt-3 mb-3">
  <div class="row">
    <div class="col-10">
      <h1>My Lists</h1>
    </div>
    <div class="col-2">
      <a href=" <%= new_list_path %> " class="btn btn-primary">Create a movie list</a>
    </div>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-6 mt-3">
        <a class="text-decoration-none" href=" <%= list_url(list) %> ">
          <div class="card-category classic">
            <%= list.name %>
          </div>
        </a>
      </div>
    <% end %>
  </div>

</div>

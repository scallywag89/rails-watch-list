<div class="container mt-3 p-3">
  <h2>Add a new bookmark</h2>
  <%= simple_form_for [@list, @bookmark],
    wrapper: :floating_labels_form,
    wrapper_mappings: {
      select:        :floating_labels_select
    } do |f| %>

    <%= f.error_notification %>

    <%= f.association :movie %>

    <%= f.association :list %>

    <%= f.input :comment, placeholder: 'Say something about this movie!' %>

    <%= f.button :submit, class: "btn-primary" %>

    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
  <% end %>
</div>
